{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "paths": {
        "@/*": [
          "./src/*" // set path `@/*` as alias of `src/*`
        ]
      },
    },
    "include": [
      "./src/",
      "./src/**/*.vue",
     
    ],
    "exclude": [
      "node_modules",
     
    ]
  }
  